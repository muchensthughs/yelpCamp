<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				YelpCamp
			</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card">
				<img src="<%= campground['img'] %>">
				<div class="card-body">
					<div class="clearfix">
						<p class="float-right">$9.00/night</p>
						<h5><a><%= campground["name"] %></a></h5>
					</div>
					<div>
						<p class="card-text"><%= campground["description"] %></p>
						<p class="text-muted">Created by <%= campground.author.username %></p>
					</div>
				</div>
			</div>
			<p>
			</p>
			<div class="card card-body bg-light">
					<div class="text-right">
						<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add a comment</a>
					</div>
					<hr>
					<% campground.comments.forEach((comment) => { %>
					<div class="row">
						<div class="col-md-12">
							<span class="float-right">10 days ago</span>
							<strong><%= comment.author.username %></strong>
							<p><%= comment.text %></p>
						</div>
					</div>
					<% }) %>
				</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>