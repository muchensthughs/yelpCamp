<% include ./partials/header %>

<div class="container">
	<header class="jumbotron">
		<h1>Welcome to Yelpcamp!</h1>
		<p>View our hand-picked campground for you</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campgrounds</a>
		</p>
	</header>

	<div class="row text-center">
		<% campgrounds.forEach((campground) => { %>
		<div class="col-md-3 col-sm-6 mb-4">
			<div class="card">
				<img src="<%= campground['img'] %>">
				<div class="card-title">
					<h4><%= campground["name"] %></h4>
				</div>
				<p>
					<a class="btn btn-primary" href="/campgrounds/<%= campground['_id'] %>">More Info</a>
				</p>
			</div>
		</div>
		<% }); %>	
	</div>
	


	
<% include ./partials/footer %>

</div>

<!-- <%= %> add the js content into this html doc as text!! It is not keeping the original data type. -->